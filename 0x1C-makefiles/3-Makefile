CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

# My variables
OBJ_TEMP = $(SRC:.c=.swp)


all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(OBJ_TEMP) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(OBJ) *~ $(OBJ_TEMP) $(NAME)

re:
	oclean $(CC) $(SRC) -o $(NAME)
